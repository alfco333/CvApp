<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_container"
        android:layout_marginStart="@dimen/margin_big"
        android:layout_marginTop="@dimen/margin_big"
        android:layout_marginEnd="@dimen/margin_big"
        android:fillViewport="true"
        tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_loading"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:lottie_fileName="lottie_loader.json"
                app:layout_constraintBottom_toBottomOf="parent"
                android:elevation="10dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <android.support.constraint.ConstraintLayout
                android:id="@+id/info_container"
                android:layout_width="match_parent"
                android:visibility="invisible"
                android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                    android:id="@+id/profile_cardview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/Base.CardView"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                        android:id="@+id/container_basic_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_profile_image"
                            android:layout_width="@dimen/profile_image_size"
                            android:layout_height="@dimen/profile_image_size"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_marginTop="@dimen/margin_big"
                            android:layout_marginEnd="@dimen/margin_medium"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"

                            android:src="@mipmap/ic_launcher"/>

                    <TextView
                            android:id="@+id/tv_profile_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginEnd="@dimen/margin_medium"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/iv_profile_image"
                            tools:text="Angel Vargas"/>

                    <TextView
                            android:id="@+id/tv_profile_description"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_marginTop="@dimen/margin_big"
                            android:layout_marginEnd="@dimen/margin_medium"
                            android:textAlignment="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textColor="@android:color/black"
                            app:layout_constraintTop_toBottomOf="@+id/tv_profile_name"
                            tools:text="Description"/>

                    <android.support.constraint.ConstraintLayout
                            android:id="@+id/container_social_links"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_marginTop="@dimen/margin_big"
                            android:layout_marginEnd="@dimen/margin_medium"
                            android:layout_marginBottom="@dimen/margin_medium"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintHeight_percent=".7"
                            app:layout_constraintWidth_percent=".7"
                            app:layout_constraintTop_toBottomOf="@+id/tv_profile_description">

                        <!--<TextView-->
                        <!--android:id="@+id/tv_website_container"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_margin="@dimen/margin_medium"-->
                        <!--android:gravity="center"-->
                        <!--android:orientation="vertical"-->
                        <!--app:layout_constraintBottom_toBottomOf="@+id/tv_linkedin_container"-->
                        <!--app:layout_constraintEnd_toStartOf="@+id/tv_linkedin_container"-->
                        <!--app:layout_constraintHorizontal_bias="0.5"-->
                        <!--app:layout_constraintHorizontal_chainStyle="packed"-->
                        <!--app:layout_constraintStart_toStartOf="parent"-->
                        <!--android:textColor="@android:color/black"-->
                        <!--app:layout_constraintTop_toTopOf="@+id/tv_linkedin_container"/>-->

                        <TextView
                                android:id="@+id/tv_linkedin_container"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_medium"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="@+id/tv_github_container"
                                app:layout_constraintEnd_toStartOf="@+id/tv_github_container"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/tv_github_container"
                                android:text="@string/text_linkedin"
                                android:textColor="@android:color/black"/>

                        <TextView
                                android:id="@+id/tv_github_container"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_medium"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/tv_linkedin_container"
                                android:text="@string/text_github"
                                android:textColor="@android:color/black"/>


                    </android.support.constraint.ConstraintLayout>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <TextView
                    android:id="@+id/tv_title_skills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_skills_list"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/resume_section_title_size"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_cardview"/>

            <android.support.v7.widget.CardView
                    android:id="@+id/profile_skills_card_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    style="@style/Base.CardView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_skills">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/tv_profile_main_skill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            tools:text="Android Developer SSr Adv"
                            android:layout_marginStart="@dimen/margin_xsmall"/>

                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/skills_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin_xsmall"
                            android:nestedScrollingEnabled="false"
                    />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                    android:id="@+id/tv_title_experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_previous_experience"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/resume_section_title_size"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_skills_card_view"/>


            <android.support.v7.widget.CardView
                    android:id="@+id/profile_work_experience_card_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/Base.CardView"
                    android:layout_marginTop="@dimen/margin_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_experience">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/work_experience_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin_xsmall"
                            android:nestedScrollingEnabled="false"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.constraint.ConstraintLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/container_placeholder"
                android:visibility="gone"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:elevation="8dp">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/placeholder_text"
                      android:padding="@dimen/margin_medium"
                      android:textSize="@dimen/resume_section_title_size"
                      android:gravity="center" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>