<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/profile_skills_card_view"
        android:layout_margin="@dimen/margin_medium"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:layout_marginBottom="@dimen/margin_xsmall"
            android:background="@android:color/white"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/iv_company_logo"
                android:layout_width="@dimen/work_image_size"
                android:layout_height="@dimen/work_image_size"
                android:layout_margin="@dimen/margin_small"
                android:layout_gravity="center_vertical"
                tools:src="@mipmap/ic_launcher"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    tools:text="Android dev"/>

            <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:textColor="@color/colorPrimaryDark"
                    tools:text=""/>

            <TextView
                    android:id="@+id/tv_work_period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:textColor="@color/colorAccent"
                    android:textStyle="italic"
                    tools:text="21/05/19"/>

            <TextView
                    android:id="@+id/tv_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    tools:text="The work information"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>